<%= form_for :person, remote: true, url: {controller: "people", action: "create"}, html:{id: 'new-person-form'} do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cui, 'CUIT/CUIL' %>
    <%= f.text_field :cui, :class => 'form-control'  %>
  </div>


  <%= f.submit "Crear Persona", :class => 'btn-md btn btn-success' %>
<% end %>
