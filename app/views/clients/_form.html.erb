<%= form_for @client do |f| %>
  <%= f.label :name, 'Nombre' %>
  <%= f.text_field :name %>

  <%= f.label :surname, 'Apellido' %>
  <%= f.text_field :surname %>

  <%= f.label :gender, 'Genero' %>
  <%= f.text_field :gender %>

  <%= f.label :dni, 'DNI' %>
  <%= f.number_field :dni %>

  <%= f.label :cui, 'CUIT/CUIL' %>
  <%= f.number_field :cui %>

  <%= f.label :birthdate, "Fecha de nacimiento" %>
  <%= f.date_field :birthdate %>

  <strong>Medios de contacto:</strong>
  <%= f.fields_for :contacts do |builder| %>
    <%= render 'contact_fields', f: builder %>
  <% end %>

  <%= f.submit "Crear" %>
<% end %>
